{
  "schemaVersion": 1,
  "title": "Maigret usernames scan",
  "type": "object",
  "properties": {
    "usernames": {
      "title": "Usernames",
      "type": "array",
      "description": "Liste des noms d’utilisateur à vérifier",
      "editor": "stringList",
      "minItems": 1,
      "uniqueItems": true,
      "items": { "type": "string", "minLength": 1 }
    },
    "siteSubset": {
      "title": "Sous-ensemble de sites (optionnel)",
      "type": "string",
      "editor": "textfield",
      "description": "Ex: popular ou liste séparée par des virgules"
    },
    "timeoutSec": {
      "title": "Timeout par username (sec)",
      "type": "integer",
      "editor": "number",
      "default": 60,
      "minimum": 1
    }
  },
  "required": ["usernames"]
}
